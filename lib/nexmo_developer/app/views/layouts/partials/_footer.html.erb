<footer id="footer">
  <% Footer.new.items.each do |item| %>
    <div class="container">
      <div id="footer-outbound-links">


      <div class="Nxd-logo Vlt-white" id="footer-logo">
        <a href="/" id="logo" class="Nxd-logo__image">
          <%= image_tag item[:logo_path], alt: item[:logo_alt] %>
        </a>
        <hr class="Nxd-product__separator">
        <div class="Nxd-product__title">
          <h5 class="Vlt-white"><%= item[:name] %></h5>
          <small><%= item[:subtitle] %></small>
        </div>
      </div>

        <a href=<%= item[:status_link_path] %> target="_blank" class="Vlt-badge-combined">
          <span class="Vlt-badge Vlt-white Nxd-api-badge"><%= item[:status_link_text] %></span><span class="Vlt-badge Vlt-badge--purple Nxd-api-status">Loading</span>
        </a>

        <div id="footer-social-links">
          <% item[:social_links].each do |target, url| %>
            <a href=<%= url %> class="footer-link" target="_blank"><i class="icon icon-<%= target %>"></i></a>
          <% end %>
        </div>
      </div>

      <% item[:navigation_links].each do |topic_arr| %>
        <div>
          <h5><%= Footer.navigation_category_titleize(topic_arr[0]) %></h5>
          <% topic_arr[1].each do |link| %>
            <a href="<%= link.values.join(' ') %>"><%= link.keys.join(' ').titleize %></a>
          <% end %>
        </div>
      <% end %>

      <div id="footer-support">
        <h5>Support</h5>
        <% item[:support_links].each do |name, url| %>
          <% if name.include?('@') %>
            <a href="mailto:<%= url %>" target="_blank"><%= name.titleize %></a>
          <% else %>
            <a href="<%= url %>" target="_blank"><%= name.titleize %></a>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</footer>
