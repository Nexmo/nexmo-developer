<center>
  <%= image_tag 'slack.svg', width: 180 %>
  <br>
  <h1 class="spacious">Join the Nexmo Community Slack</h1>

  <% unless @success %>
    <%= form_tag community_slack_path do %>
      <%= email_field_tag :email, (@email || ''), class: 'input input--large', placeholder: 'Enter Your Email Address' %>
      <%= recaptcha_tags if ENV['RECAPTCHA_ENABLED'] %>
      <%= submit_tag 'Join', class: 'button' %>
    <% end %>
  <% end %>

  <% if @notice %>
    <p class="flash"><%= @notice %></p>
  <% end %>

  <br>
  <hr class="hr--mini spacious">
  <br>

  <h2>Already a member?</h2>
  <br>
  <h4><%= link_to "Go to Nexmo Community on Slack", "https://#{ENV['SLACK_SUBDOMAIN']}.slack.com" %></h4>
</center>
