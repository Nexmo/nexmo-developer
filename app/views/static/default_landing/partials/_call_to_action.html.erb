<%
    raise "Missing 'icon_color' key in call_to_action landing page block" unless local_assigns['icon_color']
    raise "Missing 'icon' key in call_to_action landing page block" unless local_assigns['icon']
    raise "Missing 'title' key in call_to_action landing page block" unless local_assigns['title']
%>

<div class="center">
    <h2>
        <a href="/tools">
            <div>
                <svg class="Vlt-icon Vlt-icon--large Vlt-<%= local_assigns['icon_color'] %>">
                <use xlink:href="<%= local_assigns['icon'].start_with?("Brand") ? "/symbol/volta-brand-icons.svg##{local_assigns['icon']}" : "/symbol/volta-icons.svg#Vlt-#{local_assigns['icon']}" %>"></use>
                </svg>
            </div>
    <%= local_assigns['title'] %>
        </a>
    </h2>
<% if local_assigns['subtitle'] %>
    <p><%= local_assigns['subtitle'].render_markdown %></p>
<% end %>
<% if local_assigns['large_text'] %>
    <p class="p-large"><%= local_assigns['large_text'].render_markdown({skip_paragraph_surround: true}) %>
<% end %>
</div>