<%
    raise "Missing 'title' key in section_header landing page block" unless local_assigns['title']
    raise "Missing icon 'color' key in section_header landing page block" unless local_assigns['icon'][0]['color']
    raise "Missing icon 'name' key in section_header landing page block" unless local_assigns['icon'][0]['name']
%>

<h2 class="Vlt-title--icon">
    <svg class="Vlt-<%= local_assigns['icon'][0]['color'] %>"><use xlink:href="/symbol/volta-icons.svg#Vlt-<%= local_assigns['icon'][0]['name'] %>"></use></svg>
    <%= local_assigns['title'] %>
</h2>