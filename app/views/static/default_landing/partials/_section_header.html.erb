<%
    raise "Missing 'title' key in section_header landing page block" unless local_assigns['title']
    raise "Missing 'icon_color' key in section_header landing page block" unless local_assigns['icon_color']
    raise "Missing 'icon' key in section_header landing page block" unless local_assigns['icon']
%>

<h2 class="Vlt-title--icon">
    <svg class="Vlt-<%= local_assigns['icon_color'] %>"><use xlink:href="/symbol/volta-icons.svg#Vlt-<%= local_assigns['icon'] %>"></use></svg>
    <%= local_assigns['title'] %>
</h2>