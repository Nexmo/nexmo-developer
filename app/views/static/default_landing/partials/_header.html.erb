<% 
    raise "Missing icon 'color' key in header landing page block" unless local_assigns['icon'][0]['color']
    raise "Missing icon 'name' key in header landing page block" unless local_assigns['icon'][0]['name']
    raise "Missing 'title' key in header landing page block" unless local_assigns['title']
%>
    <h1 class="Vlt-title--icon <%= 'Vlt-title--center' if local_assigns['title'][0]['align'] == 'center' %>">
    <svg class="Vlt-<%= local_assigns['icon'][0]['color'] %>"><use xlink:href="/symbol/volta-icons.svg#Vlt-<%= local_assigns['icon'][0]['name'] %>"></use></svg>
    <%= local_assigns['title'] %>
</h1>
<% if local_assigns['subtitle'] %>
    <% local_assigns['subtitle'] ||= [] %>
    <% local_assigns['subtitle'].each do |text| %>
        <% if text['align'] == 'center' %>
            <div class="Vlt-center">
        <% end %>
        <p class="<%= text['type'] != 'small' ? 'p-large' : '' %>">
            <%= text['text'].render_markdown({skip_paragraph_surround: true}) %>
        </p>
        <% if text['align'] == 'center' %>
            </div>
        <% end %>
    <% end %>  
<% end %>